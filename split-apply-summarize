#by (data, INDICES, FUN, ..., simplify = TRUE)
sex<-rep(c("M","F"),each=3,4)
age<-runif(12,25,45)
height<-runif(24,30,45)
db<-data.frame(sex,age,height)
by(db$age,db$sex,mean)
#ddply
library("plyr")
ddply(db,~sex,summarize,age=mean(age),height=mean(height))
aggregate(db[,2:3],by=list(db$sex),mean)
apply(matrix(1:30,nrow=5),1,mean)
base::lapply(list(a=1:20,b=2:7,c=6:9),mean)
